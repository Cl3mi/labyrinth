<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Log directory - same as GameLogger (./logs/) -->
    <property name="LOG_DIR" value="${LOG_DIR:-logs}" />

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss}] [%level] [%logger{20}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender with date-based rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/labyrinth-client.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with max 7 days history -->
            <fileNamePattern>${LOG_DIR}/labyrinth-client.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] [%logger{36}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Package-specific log levels -->
    <logger name="labyrinth.client" level="INFO" />
</configuration>
