<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss}] [%level] [%logger{20}] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (optional - uncomment to enable file logging) -->
    <!--
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>labyrinth-client.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%level] [%logger{36}] %msg%n</pattern>
        </encoder>
    </appender>
    -->

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!-- <appender-ref ref="FILE" /> -->
    </root>

    <!-- Package-specific log levels (optional) -->
    <logger name="labyrinth.client" level="INFO" />
</configuration>
